  <script>
      // Function to dynamically change the message
      function showOrderMessage(status) {
          const orderText = document.getElementById("order-text");
          if (status === "success") {
              orderText.innerHTML = "üéâ Your order has been placed successfully!";
          } else if (status === "failed") {
              orderText.innerHTML = "‚ùå Order failed! Please try again.";
              document.querySelector(".checkmark").style.stroke = "#dc3545"; // Change to red
          }
      }
  
      // Example: Change message dynamically based on server response
      // You can replace 'success' with 'failed' if the order fails
      showOrderMessage("success");
  </script>
  
  
  
    
  
