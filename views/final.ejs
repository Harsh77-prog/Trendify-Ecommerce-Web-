    <style>
      /* Styling for Checkmark Animation */
      .checkmark-container {
          display: flex;
          justify-content: center;
          align-items: center;
      }
      
      .checkmark {
          width: 60px;
          height: 60px;
          stroke-width: 4;
          stroke: #28a745;
          stroke-miterlimit: 10;
          animation: draw 0.6s ease-in-out forwards;
      }
  
      .checkmark-circle {
          stroke-dasharray: 157;
          stroke-dashoffset: 157;
          stroke: #28a745;
          animation: circle 0.6s ease-in-out forwards;
      }
  
      .checkmark-check {
          stroke-dasharray: 36;
          stroke-dashoffset: 36;
          animation: check 0.4s ease-in-out 0.6s forwards;
      }
  
      @keyframes circle {
          100% {
              stroke-dashoffset: 0;
          }
      }
  
      @keyframes check {
          100% {
              stroke-dashoffset: 0;
          }
      }
  
      @keyframes draw {
          100% {
              stroke-dashoffset: 0;
          }
      }
  </style>
